# Opcionales/Docs             #
###############################
SENTRY_DSN=
SITE_CONTACT_EMAIL=security@email.ecosign.app

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here
# Opt-in para flujo canonico protect_document_v2 (experimental)
VITE_USE_PROTECT_V2=false

# Authority-only (v2): deshabilita ejecucion directa fuera del executor
V2_AUTHORITY_ONLY=true
DISABLE_SIGNNOW_EXECUTION=false
DISABLE_PROCESS_SIGNATURE_EXECUTION=false
DISABLE_AUTO_TSA=false
DISABLE_DB_ANCHOR_TRIGGERS=true

# Frontend: bloquear anchoring directo desde cliente
VITE_V2_AUTHORITY_ONLY=true
VITE_DISABLE_CLIENT_ANCHOR_EXECUTION=true
